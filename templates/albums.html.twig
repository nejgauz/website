{% extends 'base.html.twig' %}

{% block body %}
    <h1>Альбомы</h1>
    <ul>
        {% for album in albums %}
            <ul class="menu">
                <li>{{ album.title }}</li>
                <li>количество фото: {{ album.photos|length }}</li>
                <li>Создан: {{ album.dtCreate.format('Y-m-d') }}</li>
                <li>{{ album.email }}</li>
                <li><a href="#">удалить альбом</a></li>
                <li><a href="#">изменить альбом</a></li>
                <li><a href="#">просмотреть альбом</a></li>
            </ul>
        {% endfor %}
    </ul>
    <button class="button">Создать новый альбом</button>
{% endblock %}